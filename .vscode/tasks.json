{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start",
      "command": "pnpm",
      "args": [ "start" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "fileLocation": "absolute",
        "background": {
          "beginsPattern": "(.*)Building(.*)",
          "endsPattern": "âœ¨ Built in (.*)",
          "activeOnStart": true
        },
        "pattern": {
          "regexp": "^ðŸš¨ Build failed$",
        }
      },
      "dependsOn": ["Watch"]
    },
    {
      "label": "Watch",
      "command": "pnpm",
      "args": [ "watch" ],
      "type": "shell",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [
        {
          "fileLocation": "relative",
          "background": {
            "beginsPattern": "Started Fable compilation...",
            "endsPattern": "Fable compilation finished in (.*)",
            "activeOnStart": true
          },
          "pattern": {
            "regexp": "^(.*)\\((\\d+,\\d+)\\): (warning|error) FABLE: (.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "message": 4
          }
        },
        {
          "fileLocation": "relative",
          "background": {
            "beginsPattern": "Started Fable compilation...",
            "endsPattern": "Fable compilation finished in (.*)",
            "activeOnStart": true
          },
          "pattern": {
            "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "endLine": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
          }
        }
      ]
    },
    {
      "label": "Build Extractor",
      "command": "dotnet",
      "type": "process",
      "args": [ "build" ],
      "options": {
        "cwd": "${workspaceFolder}/src/Extractor"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
